.container {
  min-height: 100%;
}

.account__title {
  height: 60rpx;
  width: 94%;
  padding: 0 3%;
  background-color: #f5f5f5;
  font-size: 28rpx;
  line-height: 60rpx;
}

.account__title-spend {
  float: right;
}

.account__detail {
  display: flex;
  width: 100%;
  height: 100rpx;
  border-bottom: 1px solid #e4e1e1;
  align-items: center;
}

.account__detail-pic {
  width: 60rpx;
  height: 60rpx;
  background-color: #F56E51;
  border-radius: 30rpx;
  margin-left: 20rpx;
}

.account__detail-pic image {
  width: 50rpx;
  height: 50rpx;
  margin: 5rpx 0 0 5rpx;
}

.account__detail-name {
  flex: 1;
  margin-left: 20rpx;
}

.account__detail-money {
  margin-right: 50rpx;
}

.no {
  width: 100%;
  text-align: center;
  margin-top: 20rpx;
  font-style: italic;
  color: #949494;
}